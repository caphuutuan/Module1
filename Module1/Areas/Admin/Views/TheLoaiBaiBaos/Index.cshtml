@model IEnumerable<Module1.Models.TheLoaiBaiBao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content py-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/TheLoaiBaiBaos/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp; Thêm mới</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">

                    <table id="cate1" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center no-sort" style="width:3rem;">ID</th>
                                <th class="no-sort">Tên Thể loại</th>
                                <th class="no-sort">Mô tả</th>
                                <th class="no-sort text-center" style="width:10rem">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.MaTl)</td>
                                    <td>
                                        <a href="~/Admin/TheLoaiBaiBaos/Details/@Html.DisplayFor(modelItem => item.MaTl)">
                                            @Html.DisplayFor(modelItem => item.TenTl)
                                        </a>
                                    </td>
                                    <td>  @Html.DisplayFor(modelItem => item.Description)</td>
                                    <td class="text-center">
                                        @* <label class="switch">
                                            @if (item.RoleId == 0)
                                            {
                                        <input class="changeStatus" data-id="@item.RoleId" data-controller="TheLoaiBaiBaos" type="checkbox" checked>
                                            }
                                            else
                                            {
                                        <input class="changeStatus" data-id="@item.RoleId" data-controller="TheLoaiBaiBaos" type="checkbox">
                                            }
                                            <span class="slider round"></span>
                                        </label> *@
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                            <a href="@Url.Action("Edit", "TheLoaiBaiBaos", new { id = item.MaTl })" class="text-white"><i class="fas fa-pen"></i></a>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <a href="@Url.Action("Delete", "TheLoaiBaiBaos", new { id = item.MaTl })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
