@model IEnumerable<Module1.Models.BaiBao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content py-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/BaiBaos/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp; Thêm mới</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">

                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center no-sort" style="width:3rem;">ID</th>
                                <th class="no-sort">Tên bài báo</th>
                                <th class="no-sort">Tác giả</th>
                                <th class="no-sort">Lĩnh vực</th>
                                <th class="no-sort">Thể loại</th>
                                <th class="no-sort">Ngày viết</th>
                                <th class="no-sort">Status</th>
                                <th class="no-sort text-center" style="width:10rem">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.MaBb)</td>
                                    <td>
                                        <a href="~/Admin/BaiBaos/Details/@Html.DisplayFor(modelItem => item.MaBb)">
                                            @Html.DisplayFor(modelItem => item.TenBb)
                                        </a>
                                    </td>

                                    <td>
                                        <a href="~/Admin/Users/Details/@Html.DisplayFor(modelItem => item.UserId)">
                                            @Html.DisplayFor(modelItem => item.User.Ten)
                                        </a>
                                    </td>

                                    <td>
                                        <a href="~/Admin/LinhVucNbs/Details/@Html.DisplayFor(modelItem => item.MaLv)">
                                            @Html.DisplayFor(modelItem => item.MaLvNavigation.TenLinhVuc)
                                        </a>
                                    </td>

                                    <td>
                                        <a href="~/Admin/TheLoaiBaiBaos/Details/@Html.DisplayFor(modelItem => item.MaTl)">
                                            @Html.DisplayFor(modelItem => item.MaTlNavigation.TenTl)
                                        </a>
                                    </td>
                                    <td>  @Html.DisplayFor(modelItem => item.NgayViet)</td>
                                    <td>  @Html.DisplayFor(modelItem => item.StatusText)</td>
                                    <td class="text-center">
                                        <label class="switch">
                                            @if (item.Status == 0)
                                            {
                                                <input class="changeStatus" data-id="@item.MaBb" data-controller="Roles" type="checkbox" checked>
                                            }
                                            else
                                            {
                                                <input class="changeStatus" data-id="@item.MaBb" data-controller="Roles" type="checkbox">
                                            }
                                            <span class="slider round"></span>
                                        </label>
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                            <a href="@Url.Action("Edit", "BaiBaos", new { id = item.MaBb })" class="text-white"><i class="fas fa-pen"></i></a>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <a href="@Url.Action("Delete", "BaiBaos", new { id = item.MaBb })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>                    
                </div>
            </div>
        </div>
    </div>
</section>
