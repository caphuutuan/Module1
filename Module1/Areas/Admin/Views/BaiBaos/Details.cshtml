@model Module1.Models.BaiBao

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content my-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/BaiBaos/Edit/@Model.MaBb" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Sửa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/BaiBaos/Delete/@Model.MaBb" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp;Xóa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/BaiBaos/Index/@Model.MaBb" class="text-white"><i class="fas fa-door-open fa-xs"></i>&nbsp;Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.MaBb)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.MaBb)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.TenBb )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.TenBb)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.MaLv)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.MaLv)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.MaTl)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.MaTl)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.NoiDung)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.NoiDung)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.NgayViet)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.NgayViet)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.NgayChinhSua)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.NgayChinhSua)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.DanhGia)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.DanhGia)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Status)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Status)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.UserId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.UserId)</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</section>

