    <!-- JQVMap -->
    <link href="~/adminassets/plugins/jqvmap/jqvmap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/adminassets/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- overlayScrollbars -->
    <link href="~/adminassets/plugins/overlayscrollbars/css/overlayscrollbars.min.css" rel="stylesheet" />
    <!-- Daterange picker -->
    <link href="~/adminassets/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- summernote -->
    <link href="~/adminassets/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <!-- css -->
    <link href="~/adminassets/css/style.css" rel="stylesheet" />
    <!-- DataTables -->
    <link rel="stylesheet" href="~/AdminAssets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminAssets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminAssets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

