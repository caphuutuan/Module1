@model Module1.Models.BaiBao

@{
    ViewData["Title"] = "Chi tiết bài báo";
    Layout = "~/Areas/Journalist/Views/Shared/_JournalistLayout.cshtml";
}


<section class="content my-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">Chi tiết bài báo #@Model.MaBb</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Journalist/BaiBaos/Edit/@Model.MaBb" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Sửa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Journalist/BaiBaos/Delete/@Model.MaBb" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp;Xóa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Journalist/BaiBaos/Index/@Model.MaBb" class="text-white"><i class="fas fa-door-open fa-xs"></i>&nbsp;Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <table class="table table-bordered">
                    <thead>

                        <tr>
                            <th scope="col"> Mã bài báo</th>
                            <th scope="col"> Lĩnh Vực</th>
                            <th scope="col"> Thể loại</th>
                            <th scope="col">  Ngày đăng tải</th>
                            <th scope="col">  Chỉnh sửa lần cuối</th>
                            <th scope="col"> Đánh giá</th>
                            <th scope="col"> Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <th scope="col"> @Html.DisplayFor(model => model.MaBb)</th>
                            <td scope="col">  @Html.DisplayFor(model => model.MaLvNavigation.TenLinhVuc)</td>
                            <td scope="col">  @Html.DisplayFor(model => model.MaTlNavigation.TenTl)</td>
                            <td scope="col">  @Html.DisplayFor(model => model.NgayViet)</td>
                            <td scope="col">  @Html.DisplayFor(model => model.NgayChinhSua)</td>
                            <td scope="col">  @Html.DisplayFor(model => model.DanhGia)</td>
                            <td scope="col">  @Html.DisplayFor(model => model.StatusText)</td>
                        </tr>
                    </tbody>

                </table>
            </div>

            <div class="card-body">
                <div class="card-header" style="margin:auto auto">
                    <h1 class="title h3">@Html.DisplayFor(model => model.TenBb)</h1>
                </div>
                <div class="card-body">
                    <p><strong>Tác giả:</strong> @ViewBag.AuthorName</p>
                    <hr />
                    <h4 style="text-align:justify">@Html.DisplayFor(model => model.NoiDung)</h4>
                </div>
            </div>
        </div>


    </div>
</section>


